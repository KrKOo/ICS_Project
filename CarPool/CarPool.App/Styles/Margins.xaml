<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="FrameworkElement" x:Key="BasicMargin">
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="FrameworkElement" x:Key="BasicTopBottomMargin">
        <Setter Property="Margin" Value="0,10,0,10"/>
    </Style>

    <Style TargetType="FrameworkElement" x:Key="BasicSidesMargin">
        <Setter Property="Margin" Value="20,0,20,0"/>
    </Style>

    <Style TargetType="FrameworkElement" x:Key="SidesMargin2">
        <Setter Property="Margin" Value="40,0,40,0"/>
    </Style>
</ResourceDictionary>