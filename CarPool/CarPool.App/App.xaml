<Application x:Class="CarPool.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CarPool.App"
             xmlns:converters="clr-namespace:CarPool.App.Converters">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Headings.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/Margins.xaml"/>
                <ResourceDictionary Source="Styles/TextElements.xaml"/>
                <ResourceDictionary Source="Styles/GridSpacing.xaml"/>
                <ResourceDictionary Source="Styles/Label.xaml"/>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
             </ResourceDictionary.MergedDictionaries>

            <converters:DateConverter x:Key="DateConverter" />
            <converters:DateTimeConverter x:Key="DateTimeConverter" />
            <converters:TimeSpanConverter x:Key="TimeSpanConverter" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
